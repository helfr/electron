<div class="simplecheckout-block" id="simplecheckout_text_{{ block }}">
  <div class="card mb-4">
    {% if display_header %}
    <div class="checkout-heading card-header px-3">
      <div class="row no-gutters align-items-center">
        <div class="col-auto">
          <svg class="d-block ft-icon-24 m-0 text-gray-500 mr-3" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path d="M11 7h2v2h-2zm0 4h2v6h-2zm1-9C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8z"/>
          </svg>
        </div>
        <div class="col">
          <div class="h5 m-0">
            {{ text_title }}
          </div>
        </div>
      </div>
    </div>
    {% endif %}
    <div class="simplecheckout-block-content card-body">
      {{ text_content }}
    </div>
  </div>
</div>
