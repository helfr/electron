<div>
  {% if route|slice(0, 9) == 'checkout/' %}
  <h5>{{ text_captcha }}</h5>
  <div class="form-group required">
    <label for="input-payment-captcha">{{ entry_captcha }}</label>
		<div class="form-row">
			<div class="col-12 col-sm mb-2 mb-sm-0">
				<input type="text" name="captcha" id="input-captcha" class="form-control {% if error_captcha %}border-danger{% endif %}" placeholder="{{ entry_captcha }}" />
			</div>
			<div class="col-auto">
        <div class="border rounded overflow-hidden h-100">
          <img src="index.php?route=extension/captcha/basic/captcha" class="d-block my-n1 mx-n4" style="max-width:none" alt="{{ text_captcha }}" />
        </div>
			</div>
		</div>
  </div>
  {% else %}
  <div class="form-inline">
    <div class="input-group">
      <input type="text" name="captcha" id="input-captcha" class="form-control {% if error_captcha %}border-danger{% endif %}" placeholder="{{ entry_captcha }}" />
      <div class="input-group-append">
        <span class="input-group-text p-0 overflow-hidden">
          <img src="index.php?route=extension/captcha/basic/captcha" class="d-block my-n1 mx-n4" style="max-width:none" alt="{{ text_captcha }}" />
        </span>
      </div>
    </div>
    {% if error_captcha %}
  	<div class="text-danger">{{ error_captcha }}</div>
  	{% endif %}
  </div>
  {% endif %}
</div>
