{% if selecteds %}
<div class="list-group-item selected-options">
  {% for option in selecteds %}
  <div class="ocfilter-option">
    <small class="d-block text-muted font-weight-light mb-1">{{ option.name }}:</small>
    {% for value in option.values %}
    <button type="button" onclick="location = '{{ value.href }}';" class="btn btn-sm btn-danger pl-1 pr-2 py-0 mb-1">
      <span class="row no-gutters align-items-center">
        <span class="col-auto">
          <svg class="d-block ft-icon-18 m-0 text-white mr-1" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"/>
          </svg>
        </span>
        <span class="col-auto">
          {{ value.name }}
        </span>
      </span>
    </button>
    {% endfor %}
  </div>
  {% endfor %}
  {% if selecteds|length > 1 or selecteds|first.values|length > 1 %}
  <button type="button" onclick="location = '{{ link}}';" class="btn btn-sm btn-danger mt-1">
    <span class="row no-gutters align-items-center">
      <span class="col-auto">
        <svg class="d-block ft-icon-18 m-0 text-white mr-2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path d="M15 16h4v2h-4zm0-8h7v2h-7zm0 4h6v2h-6zM3 18c0 1.1.9 2 2 2h6c1.1 0 2-.9 2-2V8H3v10zM14 5h-3l-1-1H6L5 5H2v2h12z"/>
        </svg>
      </span>
      <span class="col-auto">
        {{ text_cancel_all }}
      </span>
    </span>
  </button>
  {% endif %}
</div>
{% endif %}
