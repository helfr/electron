<script>
	function apply(){
		$(".container-fluid > .alert").remove();
		$.ajax({
			type: "post",
			url: $("#form-theme").attr('action'),
			data: $("#form-theme").serialize(),
			dataType: 'html',
			beforeSend: function() {
				$('body').addClass('loading');
				$('.control-btns .btn').addClass('disabled');
			},
			success: function(html) {
				var $href = $(html).find(".well [selected=\"selected\"]").val();
				if ($href) {
					$.ajax({
						type: "post",
						url: $href,
						data: '',
						dataType: 'html',
						success: function(html) {
							var $success = $(html).find(".alert-success, .alert-danger");
							if ($success.length > 0) {
								$("#frame-controls").before($success);
								$('body').removeClass('loading');
								$('.control-btns .btn').removeClass('disabled');
							}
						}
					});
				} else {
					var $success = $(html).find(".alert-success, .alert-danger");
					if ($success.length > 0) {
						$("#frame-controls").before($success);
						$('body').removeClass('loading');
						$('.control-btns .btn').removeClass('disabled');
					}
				}
			}
		});
	}
</script>
