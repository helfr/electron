  function removeSlide(id) {
    var item = $('a[href=' + id + ']').parent(),
        next = item.next(),
        prev = item.prev();

    if ( item.hasClass('active') ) {

      if ( prev.length > 0 ) {

        prev.find('a').tab('show');

      } else if ( next.length > 0 && !next.hasClass('add-new-slide') ) {

        next.find('a').tab('show');
      }
    }

    item.remove();

    $(id).remove();
  }

